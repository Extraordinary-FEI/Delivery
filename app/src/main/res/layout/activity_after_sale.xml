<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageButton
        android:id="@+id/button_back"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/bg_back_circle"
        android:contentDescription="@string/action_back"
        android:padding="8dp"
        android:scaleType="center"
        android:src="@drawable/ic_back_arrow"
        android:tint="@color/secondary_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/member_profile_order_refund"
        android:textColor="@color/primary_text"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tab_refund"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/bg_quantity_outline"
            android:gravity="center"
            android:text="@string/after_sale_tab_refund"
            android:textColor="@color/primary_color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tab_feedback"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/bg_primary_button"
            android:gravity="center"
            android:text="@string/after_sale_tab_feedback"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_refund_placeholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_card"
        android:padding="14dp"
        android:text="@string/after_sale_refund_placeholder"
        android:textColor="@color/secondary_text"
        android:visibility="gone" />

    <TextView
        android:id="@+id/text_feedback_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/feedback_empty"
        android:textColor="@color/profile_muted_text"
        android:textSize="12sp"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_feedback_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp" />
</LinearLayout>

