<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/bg_card"
    android:orientation="vertical"
    android:padding="14dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_feedback_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/feedback_type_complaint"
            android:textColor="@color/primary_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_feedback_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/feedback_status_pending"
            android:textColor="@color/primary_color"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_feedback_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/points_log_time_placeholder"
        android:textColor="@color/profile_muted_text"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/text_feedback_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/feedback_content_hint"
        android:textColor="@color/secondary_text"
        android:textSize="12sp" />
</LinearLayout>
