<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_light"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/text_login_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/login_title"
            android:textColor="@color/primary_text"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_login_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:text="@string/login_subtitle"
            android:textColor="@color/secondary_text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_language_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/language_label"
            android:textColor="@color/primary_text"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_apple_textfield"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />

        <EditText
            android:id="@+id/edit_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_apple_textfield"
            android:hint="@string/label_username"
            android:inputType="textPersonName"
            android:textColorHint="@color/secondary_text"
            android:textColor="@color/primary_text" />

        <EditText
            android:id="@+id/edit_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_apple_textfield"
            android:hint="@string/label_password"
            android:inputType="textPassword"
            android:textColorHint="@color/secondary_text"
            android:textColor="@color/primary_text" />

        <TextView
            android:id="@+id/text_login_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/error_color"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_admin_toggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="@string/action_admin_login"
            android:textColor="@color/secondary_text"
            android:textSize="13sp" />

        <LinearLayout
            android:id="@+id/layout_admin_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/text_admin_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/admin_login_hint"
                android:textColor="@color/secondary_text"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/edit_admin_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_apple_textfield"
                android:hint="@string/label_admin_code"
                android:inputType="numberPassword"
                android:textColorHint="@color/secondary_text"
                android:textColor="@color/primary_text" />
        </LinearLayout>

        <Button
            android:id="@+id/button_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_primary_button"
            android:padding="14dp"
            android:text="@string/action_login"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/button_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_secondary_button"
            android:padding="14dp"
            android:text="@string/action_register"
            android:textColor="@color/primary_color"
            android:textSize="15sp" />
    </LinearLayout>
</ScrollView>
