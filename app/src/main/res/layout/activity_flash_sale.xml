<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/button_back"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/bg_back_circle"
            android:contentDescription="@string/action_back"
            android:padding="8dp"
            android:scaleType="center"
            android:src="@drawable/ic_back_arrow"
            android:tint="@color/secondary_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/flash_sale_title"
            android:textColor="@color/primary_text"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_flash_sale_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/flash_sale_countdown"
            android:textColor="@color/primary_color"
            android:textSize="14sp" />

        <Button
            android:id="@+id/button_manage_seckill"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_primary_button"
            android:text="@string/flash_sale_admin_manage"
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_flash_sale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/text_flash_sale_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/flash_sale_status_empty"
            android:textColor="@color/secondary_text"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_flash_sale_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/flash_sale_user_hint"
            android:textColor="@color/secondary_text" />
    </LinearLayout>
</ScrollView>
