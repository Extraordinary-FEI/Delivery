<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    android:padding="14dp">

    <TextView
        android:id="@+id/text_seckill_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_text"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_seckill_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/secondary_text"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_edit_seckill"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:background="@drawable/bg_primary_button"
            android:text="@string/admin_seckill_edit"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <Button
            android:id="@+id/button_toggle_seckill"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/bg_chip"
            android:text="@string/admin_seckill_toggle"
            android:textColor="@color/primary_color"
            android:textSize="12sp" />

        <Button
            android:id="@+id/button_delete_seckill"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/bg_quantity_outline"
            android:text="@string/admin_seckill_delete"
            android:textColor="@color/primary_color"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>
