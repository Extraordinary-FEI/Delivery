<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@drawable/bg_search"
    android:orientation="horizontal"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_points_log_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/points_type_default"
            android:textColor="@color/primary_text"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_points_log_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/points_log_time_placeholder"
            android:textColor="@color/profile_muted_text"
            android:textSize="11sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_points_log_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+0"
        android:textColor="@color/primary_color"
        android:textSize="14sp"
        android:textStyle="bold" />
</LinearLayout>
