<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:orientation="vertical"
    android:padding="24dp">

    <ImageButton
        android:id="@+id/button_back"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/bg_back_circle"
        android:contentDescription="@string/action_back"
        android:padding="8dp"
        android:scaleType="center"
        android:src="@drawable/ic_back_arrow"
        android:tint="@color/secondary_text" />

    <TextView
        android:id="@+id/text_register_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/register_title"
        android:textColor="@color/primary_text"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_role_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/role_label"
        android:textColor="@color/primary_text"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/radio_group_role"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_role_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:tag="user"
            android:text="@string/role_user"
            android:textColor="@color/primary_text" />

        <RadioButton
            android:id="@+id/radio_role_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:tag="admin"
            android:text="@string/role_admin"
            android:textColor="@color/primary_text" />
    </RadioGroup>

    <EditText
        android:id="@+id/edit_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_apple_textfield"
        android:hint="@string/label_username"
        android:inputType="textPersonName"
        android:textColorHint="#9AA0A6"
        android:textColor="@color/primary_text" />

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_apple_textfield"
        android:hint="@string/label_password"
        android:inputType="textPassword"
        android:textColorHint="#9AA0A6"
        android:textColor="@color/primary_text" />

    <EditText
        android:id="@+id/edit_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_apple_textfield"
        android:hint="@string/label_confirm_password"
        android:inputType="textPassword"
        android:textColorHint="#9AA0A6"
        android:textColor="@color/primary_text" />

    <EditText
        android:id="@+id/edit_admin_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_apple_textfield"
        android:hint="@string/label_admin_code"
        android:inputType="numberPassword"
        android:textColorHint="#9AA0A6"
        android:textColor="@color/primary_text"
        android:visibility="gone" />

    <Button
        android:id="@+id/button_register_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_primary_button"
        android:padding="14dp"
        android:text="@string/action_register"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

    <Button
        android:id="@+id/button_back_to_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_secondary_button"
        android:padding="14dp"
        android:text="@string/action_back_to_login"
        android:textColor="@color/primary_color"
        android:textSize="15sp" />

</LinearLayout>
